{
  "name": "mastra-weather-mcp",
  "version": "1.0.0",
  "description": "基于 OpenAI + Mastra + 天气查看 MCP 的 AI 应用",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "setup": "bash ./scripts/setup.sh",
    "dev:script": "bash ./scripts/dev.sh",
    "deploy": "bash ./scripts/deploy.sh",
    "test:script": "bash ./scripts/test.sh",
    "docker:build": "docker build -t mastra-weather-mcp .",
    "docker:run": "docker run -p 3000:3000 --env-file .env mastra-weather-mcp"
  },
  "dependencies": {
    "@mastra/core": "^0.1.30",
    "@mastra/engine": "^0.1.30",
    "@mastra/mcp": "^0.1.30",
    "openai": "^4.67.3",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/jest": "^29.5.8",
    "typescript": "^5.3.3",
    "tsx": "^4.6.2",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1"
  },
  "keywords": [
    "mastra",
    "openai",
    "mcp",
    "weather",
    "ai",
    "assistant",
    "typescript",
    "model-context-protocol"
  ],
  "author": "Rexingleung <rexingleung@126.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Rexingleung/mastra-weather-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/Rexingleung/mastra-weather-mcp/issues"
  },
  "homepage": "https://github.com/Rexingleung/mastra-weather-mcp#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}